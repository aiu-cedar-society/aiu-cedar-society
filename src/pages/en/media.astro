---
import Layout from "../../layouts/Layout.astro";
import Breadcrumb from "../../components/Breadcrumb.astro";
import BreadcrumbSchema from "../../components/BreadcrumbSchema.astro";
import EmptyState from "../../components/EmptyState.astro";
import { getCollection } from "astro:content";
import { formatDateTime } from "../../i18n/utils";

// Helper to get English content or fallback to Japanese
const getContent = (en: string | undefined, ja: string) => en || ja;

// Fetch media coverage using Content Layer API
const allMediaCoverage = await getCollection("media_coverage");
const mediaCoverage = allMediaCoverage.map((item) => ({
    id: item.id,
    title: item.data.title,
    media_name: item.data.media_name,
    publish_date: item.data.publish_date,
    url: item.data.url,
    description: item.data.description,
}));

// SEO
const seo = {
    title: "Media Coverage | AIU Cedar Society",
    description:
        "AIU Cedar Society media coverage in newspapers, magazines, and web media. Featured in local media including Akita Sakigake Shimpo.",
    keywords: "AIU Cedar Society,Media Coverage,Press,News,Articles",
};

const breadcrumbItems = [{ label: "Home", href: "/en" }, { label: "Media" }];
---

<Layout seo={seo}>
    <BreadcrumbSchema items={breadcrumbItems} />
    <div class="min-h-screen">
        <div
            class="container mx-auto px-4 md:px-6 pt-16 md:pt-20 pb-12 md:pb-20 max-w-5xl"
        >
            <Breadcrumb items={breadcrumbItems} />
            {/* Back Button */}
            <a
                href="/en"
                class="inline-flex items-center text-gray-500 hover:text-[#006837] mb-8 md:mb-12 transition-colors group text-sm font-medium min-h-[44px]"
            >
                <svg
                    class="w-4 h-4 mr-2 transform group-hover:-translate-x-1 transition-transform"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M15 19l-7-7 7-7"></path>
                </svg>
                Back to Home
            </a>

            {/* Hero Section */}
            <div class="relative mb-12 md:mb-16">
                <div class="relative mb-6">
                    <div class="absolute top-0 left-0 w-px h-full bg-[#006837]">
                    </div>
                    <h1 class="typography-hero pl-6">
                        Media <span class="text-[#006837] typography-hero-accent">Coverage</span>
                    </h1>
                </div>
                <p
                    class="text-lg md:text-xl text-gray-600 leading-relaxed pl-6 max-w-2xl"
                >
                    AIU Cedar Society in the news
                </p>
            </div>

            {/* Media Coverage Card */}
            <div class="bg-white rounded-lg shadow-md p-8 md:p-10 mb-8">
                <div
                    class="flex items-center gap-3 mb-8 pb-6 border-b border-gray-200"
                >
                    <div
                        class="w-6 h-6 bg-[#006837] bg-opacity-5 rounded-lg flex items-center justify-center flex-shrink-0"
                    >
                        <svg
                            class="w-4 h-4 text-[#006837]"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"
                            ></path>
                        </svg>
                    </div>
                    <h2
                        class="text-xl md:text-2xl font-bold text-gray-900 tracking-tight"
                    >
                        Coverage History
                    </h2>
                </div>

                {
                    mediaCoverage.length > 0 ? (
                        <div class="space-y-6">
                            {mediaCoverage.map((item) => (
                                <div class="border border-gray-200 rounded-lg p-6 hover:shadow-md transition-shadow">
                                    <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-4 mb-3">
                                        <div class="flex-1">
                                            <h3 class="text-lg font-bold text-gray-900 mb-2">
                                                {getContent(
                                                    (item as any).title_en,
                                                    item.title,
                                                )}
                                            </h3>
                                            <div class="flex items-center gap-3 text-sm text-gray-600 mb-3">
                                                <span class="font-medium text-[#006837]">
                                                    {item.media_name}
                                                </span>
                                                <span>â€¢</span>
                                                <span>
                                                    {formatDateTime(
                                                        item.publish_date,
                                                        "en",
                                                    )}
                                                </span>
                                            </div>
                                            <p class="text-sm text-gray-700 leading-relaxed">
                                                {getContent(
                                                    (item as any)
                                                        .description_en,
                                                    item.description,
                                                )}
                                            </p>
                                        </div>
                                        {item.url && (
                                            <a
                                                href={item.url}
                                                target="_blank"
                                                rel="noopener noreferrer"
                                                class="inline-flex items-center gap-2 text-sm font-bold text-[#006837] hover:gap-3 transition-all whitespace-nowrap"
                                            >
                                                <span>Read Article</span>
                                                <svg
                                                    class="w-4 h-4"
                                                    fill="none"
                                                    viewBox="0 0 24 24"
                                                    stroke="currentColor"
                                                >
                                                    <path
                                                        stroke-linecap="round"
                                                        stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                                                    />
                                                </svg>
                                            </a>
                                        )}
                                    </div>
                                </div>
                            ))}
                        </div>
                    ) : (
                        <EmptyState
                            title="Coming Soon"
                            description="Media coverage will be added here as it becomes available."
                            riveSrc=""
                        />
                    )
                }
            </div>

            {/* Info Card */}
            <div
                class="bg-gray-50 rounded-lg p-6 md:p-8 border border-gray-200"
            >
                <div class="flex items-start gap-3">
                    <svg
                        class="w-6 h-6 text-[#006837] flex-shrink-0 mt-1"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z"
                        ></path>
                    </svg>
                    <div>
                        <h3 class="text-lg font-bold text-gray-900 mb-2">
                            Press Inquiries
                        </h3>
                        <p class="text-sm text-gray-600 leading-relaxed mb-4">
                            For interview requests or media inquiries about AIU
                            Cedar Society, please contact us through the contact
                            form.
                        </p>
                        <a
                            href="/en/contact"
                            class="inline-flex items-center gap-2 text-sm font-bold text-[#006837] hover:gap-3 transition-all"
                        >
                            <span>Contact Us</span>
                            <svg
                                class="w-4 h-4"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M9 5l7 7-7 7"></path>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</Layout>
