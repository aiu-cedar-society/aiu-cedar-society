---
import Layout from "../../layouts/Layout.astro";
import Breadcrumb from "../../components/Breadcrumb.astro";
import BreadcrumbSchema from "../../components/BreadcrumbSchema.astro";
import { getPages, type SponsorItem } from "../../library/microcms";
import { getContent } from "../../i18n/utils";

// Fetch sponsors from Pages API
let sponsors: SponsorItem[] = [];
try {
    const pages = await getPages();
    sponsors = pages.sponsors || [];
} catch (error) {
    console.error("Error fetching sponsors:", error);
}

// SEO
const seo = {
    title: "Our Sponsors | AIU Cedar Society",
    description:
        "Our corporate sponsors and partners who support AIU Cedar Society. We sincerely appreciate your support.",
    keywords: "AIU Cedar Society,Sponsors,Partners,Corporate Support",
};

const breadcrumbItems = [{ label: "Home", href: "/en" }, { label: "Sponsors" }];
---

<Layout seo={seo}>
    <BreadcrumbSchema items={breadcrumbItems} />
    <div class="min-h-screen">
        <div
            class="container mx-auto px-4 md:px-6 pt-16 md:pt-20 pb-12 md:pb-20 max-w-5xl"
        >
            <Breadcrumb items={breadcrumbItems} />
            {/* Back Button */}
            <a
                href="/en"
                class="inline-flex items-center text-gray-500 hover:text-[#006837] mb-8 md:mb-12 transition-colors group text-sm font-medium min-h-[44px]"
            >
                <svg
                    class="w-4 h-4 mr-2 transform group-hover:-translate-x-1 transition-transform"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M15 19l-7-7 7-7"></path>
                </svg>
                Back to Home
            </a>

            {/* Hero Section */}
            <div class="relative mb-12 md:mb-16">
                <div class="relative mb-6">
                    <div class="absolute top-0 left-0 w-px h-full bg-[#006837]">
                    </div>
                    <h1 class="typography-hero pl-6">
                        Our <span class="text-[#006837] typography-hero-accent">Sponsors</span>
                    </h1>
                </div>
                <p
                    class="text-lg md:text-xl text-gray-600 leading-relaxed pl-6 max-w-2xl"
                >
                    Partners supporting AIU Cedar Society's activities
                </p>
            </div>

            {/* Sponsors Content */}
            {
                sponsors.length > 0 ? (
                    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                        {sponsors.map((sponsor) => (
                            <a
                                href={sponsor.url || "#"}
                                target={sponsor.url ? "_blank" : "_self"}
                                rel={sponsor.url ? "noopener noreferrer" : ""}
                                class="bg-white rounded-xl shadow-md p-6 border border-gray-100 hover:shadow-lg hover:border-[#006837] hover:border-opacity-30 transition-all duration-300 block"
                            >
                                <div class="flex flex-col items-center text-center">
                                    {sponsor.logo ? (
                                        <img
                                            src={sponsor.logo.url}
                                            alt={sponsor.name}
                                            class="w-24 h-24 object-contain mb-4"
                                        />
                                    ) : (
                                        <div class="w-24 h-24 bg-gray-100 rounded-lg flex items-center justify-center mb-4">
                                            <svg
                                                class="w-10 h-10 text-gray-300"
                                                fill="none"
                                                viewBox="0 0 24 24"
                                                stroke="currentColor"
                                            >
                                                <path
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    stroke-width="2"
                                                    d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"
                                                />
                                            </svg>
                                        </div>
                                    )}
                                    <h3 class="font-bold text-lg text-gray-900 mb-2">
                                        {sponsor.name}
                                    </h3>
                                    {sponsor.description && (
                                        <p class="text-sm text-gray-600 line-clamp-2">
                                            {getContent(
                                                (sponsor as any).description_en,
                                                sponsor.description,
                                            )}
                                        </p>
                                    )}
                                    {sponsor.url && (
                                        <span class="mt-3 text-[#006837] text-sm font-medium flex items-center gap-1">
                                            Visit Website
                                            <svg
                                                class="w-3 h-3"
                                                fill="none"
                                                viewBox="0 0 24 24"
                                                stroke="currentColor"
                                            >
                                                <path
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    stroke-width="2"
                                                    d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                                                />
                                            </svg>
                                        </span>
                                    )}
                                </div>
                            </a>
                        ))}
                    </div>
                ) : (
                    <div class="bg-white rounded-lg shadow-md p-8 text-center">
                        <svg
                            class="w-16 h-16 text-gray-300 mx-auto mb-4"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"
                            />
                        </svg>
                        <p class="text-gray-500 text-lg">
                            Sponsor information is being prepared
                        </p>
                        <p class="text-gray-400 text-sm mt-2">Coming soon</p>
                    </div>
                )
            }

            {/* Become a Sponsor CTA */}
            <div class="mt-12 bg-[#006837] rounded-xl p-8 md:p-10 text-white">
                <h3 class="text-2xl font-bold mb-3">Become a Sponsor</h3>
                <p class="text-white text-opacity-90 mb-6 leading-relaxed">
                    We welcome support from companies and individuals who share
                    our mission.<br />
                    For details about sponsorship, please contactã€€us.
                </p>
                <a
                    href="/en/contact"
                    class="inline-flex items-center gap-2 bg-white text-[#006837] font-bold py-3 px-6 rounded-lg hover:bg-gray-100 transition-colors duration-300"
                >
                    Contact Us
                    <svg
                        class="w-4 h-4"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                    </svg>
                </a>
            </div>
        </div>
    </div>
</Layout>
